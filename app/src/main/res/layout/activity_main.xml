<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#181818"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <TextView
        android:id="@+id/inputtext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/white"
        android:gravity="right"
        android:paddingRight="10dp"
        android:layout_above="@id/outputtext"
        android:textSize="50dp"/>


<TextView
    android:id="@+id/outputtext"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text=""
    android:textColor="@color/white"
    android:gravity="right"
    android:paddingRight="10dp"
    android:layout_above="@id/ll1"
    android:textSize="100dp"/>

  <LinearLayout
      android:id="@+id/ll1"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/black"
      android:orientation="vertical"
      android:layout_alignParentBottom="true">
       <LinearLayout

           android:orientation="horizontal"
           android:padding="10dp"
           android:gravity="center"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <ImageView
               android:layout_width="70dp"
               android:layout_height="70dp"
               android:layout_marginStart="25dp"
               android:id="@+id/btn_ac"
               android:layout_marginLeft="25dp"
               android:background="@drawable/btn_backspace"

               />
           <ImageView
               android:layout_width="70dp"
               android:layout_height="70dp"
               android:layout_marginStart="25dp"
               android:id="@+id/btn_divide"
               android:layout_marginLeft="25dp"
               android:background="@drawable/btn_divide"

               />
           <ImageView
               android:layout_width="70dp"
               android:layout_height="70dp"
               android:layout_marginStart="25dp"
               android:id="@+id/btn_start_bracket"
               android:layout_marginLeft="25dp"
               android:background="@drawable/btn_obracket"

               />
           <ImageView
               android:layout_width="70dp"
               android:layout_height="70dp"
               android:layout_marginStart="25dp"
               android:id="@+id/btn_close_bracket"
               android:layout_marginLeft="25dp"
               android:background="@drawable/btn_cbracket"

               />




           </LinearLayout>
      <LinearLayout
          android:orientation="horizontal"
          android:padding="10dp"
          android:gravity="center"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

          <ImageView
              android:layout_width="70dp"
              android:id="@+id/btn_7"
              android:layout_height="70dp"
              android:layout_marginStart="25dp"
              android:layout_marginLeft="25dp"
              android:background="@drawable/btn_7"

              />
          <ImageView
              android:layout_width="70dp"
              android:layout_height="70dp"
              android:id="@+id/btn_8"
              android:layout_marginStart="25dp"
              android:layout_marginLeft="25dp"
              android:background="@drawable/btn_8"

              />
          <ImageView
              android:layout_width="70dp"
              android:layout_height="70dp"
              android:id="@+id/btn_9"
              android:layout_marginStart="25dp"
              android:layout_marginLeft="25dp"
              android:background="@drawable/btn_9"

              />
          <ImageView
              android:layout_width="70dp"
              android:layout_height="70dp"
              android:id="@+id/btn_multiply"
              android:layout_marginStart="25dp"
              android:layout_marginLeft="25dp"
              android:background="@drawable/btn_multiply"

              />




      </LinearLayout>
      <LinearLayout
          android:orientation="horizontal"
          android:padding="10dp"
          android:gravity="center"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

          <ImageView
              android:layout_width="70dp"
              android:layout_height="70dp"
              android:id="@+id/btn_4"
              android:layout_marginStart="25dp"
              android:layout_marginLeft="25dp"
              android:background="@drawable/btn_4"

              />
          <ImageView
              android:layout_width="70dp"
              android:layout_height="70dp"
              android:id="@+id/btn_5"
              android:layout_marginStart="25dp"
              android:layout_marginLeft="25dp"
              android:background="@drawable/btn_5"

              />
          <ImageView
              android:layout_width="70dp"
              android:layout_height="70dp"
              android:id="@+id/btn_6"
              android:layout_marginStart="25dp"
              android:layout_marginLeft="25dp"
              android:background="@drawable/btn_6"

              />
          <ImageView
              android:layout_width="70dp"
              android:layout_height="70dp"
              android:id="@+id/btn_minus"
              android:layout_marginStart="25dp"
              android:layout_marginLeft="25dp"
              android:background="@drawable/btn_minus"

              />




      </LinearLayout>
      <LinearLayout
          android:orientation="horizontal"
          android:padding="10dp"
          android:gravity="center"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

          <ImageView
              android:layout_width="70dp"
              android:id="@+id/btn_1"
              android:layout_height="70dp"
              android:layout_marginStart="25dp"
              android:layout_marginLeft="25dp"
              android:background="@drawable/btn_1"

              />
          <ImageView
              android:layout_width="70dp"
              android:layout_height="70dp"
              android:id="@+id/btn_2"
              android:layout_marginStart="25dp"
              android:layout_marginLeft="25dp"
              android:background="@drawable/btn_2"

              />
          <ImageView
              android:layout_width="70dp"
              android:layout_height="70dp"
              android:id="@+id/btn_3"
              android:layout_marginStart="25dp"
              android:layout_marginLeft="25dp"
              android:background="@drawable/btn_3"

              />
          <ImageView
              android:layout_width="70dp"
              android:layout_height="70dp"
              android:id="@+id/btn_plus"
              android:layout_marginStart="25dp"
              android:layout_marginLeft="25dp"
              android:background="@drawable/btn_plus"

              />




      </LinearLayout>
      <LinearLayout
          android:orientation="horizontal"
          android:padding="10dp"
          android:gravity="center"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

          <ImageView
              android:layout_width="70dp"
              android:layout_height="70dp"

              android:layout_marginStart="25dp"
              android:layout_marginLeft="25dp"
              android:id="@+id/btn_00"
              android:background="@drawable/btn_00"

              />
          <ImageView
              android:layout_width="70dp"
              android:layout_height="70dp"
              android:id="@+id/btn_0"

              android:layout_marginStart="25dp"
              android:layout_marginLeft="25dp"
              android:background="@drawable/btn_0"

              />
          <ImageView
              android:layout_width="70dp"
              android:layout_height="70dp"
              android:id="@+id/btn_dot"
              android:layout_marginStart="25dp"
              android:layout_marginLeft="25dp"
              android:background="@drawable/btn_dot"

              />
          <ImageView
              android:layout_width="70dp"
              android:layout_height="70dp"
              android:layout_marginStart="25dp"
              android:id="@+id/btn_equal"
              android:layout_marginLeft="25dp"
              android:background="@drawable/btn_eqaul"

              />




      </LinearLayout>
</LinearLayout>





</RelativeLayout>